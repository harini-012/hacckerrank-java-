import java.io.*;
import java.util.*;
class Node
{
    int data;
    Node left,right;
    Node(int data)
    {
        this.data=data;
        this.left=null;
        this.right=null;
    }
    
}
public class Solution 
{
   static Node buildTree(int[]arr)
   {
       if(arr.length==0)
       {
           return null;
       }
       Node root=new Node(arr[0]);//first data of the array is the root element
       Queue<Node>q=new LinkedList<>();
       q.add(root);
       int i=1;
       while(i<arr.length)
       {
           Node current=q.poll();
           if(i<arr.length)
           {
               current.left=new Node(arr[i]);
                i++;
                q.add(current.left);
           }
           if(i<arr.length)
           {
               current.right=new Node(arr[i]);
                i++;
                q.add(current.right);
           }
           
           
       }
       return root;
       
   }
    static void displayTree(Node root,int level)
    {
        if(root==null)
        {
            return;
        }
        Queue<Node>q=new LinkedList<>();
        q.add(root);
        boolean leftToRight=true;
        while(!q.isEmpty())
        {
           int size=q.size();
            List<Integer>list=new ArrayList<>();
            for(int i=0;i<size;i++)
            {
                Node node=q.poll();
                list.add(node.data);
                if(node.left!=null)
                {
                    q.add(node.left);
                }
                if(node.right!=null)
                {
                    q.add(node.right);
                }
                
            }
            if(!leftToRight)
            {
                Collections.reverse(list);
            }
            for(int val:list)
            {
                System.out.print(val+" ");
            }
            System.out.println();
            leftToRight=!leftToRight;
        }
        
    }
    
    public static void main(String[] args) 
    {
        Scanner sc=new Scanner(System.in);
        int no=sc.nextInt();
        int[]arr=new int[no];
        for (int i=0;i<no;i++)
        {
            arr[i]=sc.nextInt();
            
        }
        Node root=buildTree(arr);//buid a binary tree
        displayTree(root,0);
    
    }
}
